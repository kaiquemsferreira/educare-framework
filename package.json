{
  "name": "educare-framework",
  "version": "0.0.0",
  "scripts": {
    "start": "npm run generate-core-version && ng serve --no-live-reload",
    "build": "run generate-core-version && rm -rf dist && ng build --configuration production && npm run copy-version-prod",
    "copy-version-prod": "node copy-package.js && node version.js",
    "publish:prod-version": "npm run publish:checkout-prod && npm run release:fetch-tags && npm run publish:version && npm run release:push-tags && npm run build-prod && npm run release:perform",
    "publish:prod-version-minor": "npm run publish:checkout-prod && npm run release:fetch-tags && npm run publish:version-minor && npm run release:push-tags && npm run build-prod && npm run release:perform",
    "publish:prod-version-patch": "npm run publish:checkout-prod && npm run release:fetch-tags && npm run publish:version-patch && npm run release:push-tags && npm run build-prod && npm run release:perform",
    "publish:version": "npm version 3.0.0 -m \"[version release %s]\"",
    "publish:version-minor": "npm version minor -m \"[version release %s]\"",
    "publish:version-patch": "npm version patch -m \"[version release %s]\"",
    "publish:checkout-prod": "git checkout master && git pull --rebase",
    "release:fetch-tags": "git fetch --all --tags",
    "release:push-tags": "git push --tags && git push",
    "release:perform": "npm publish dist/core --access public",
    "clean": "(rm -rf node_modules || true) && (rm package-lock.json || true)",
    "clean-install": "npm run clean && npm install",
    "generate-core-version": "ts-node projects/core/src/lib/scripts/version.script.cts",
    "prepublishOnly": "npm run generate-core-version"
  },
  "private": false,
  "dependencies": {
    "@angular/animations": "^19.1.0",
    "@angular/common": "^19.1.0",
    "@angular/compiler": "^19.1.0",
    "@angular/core": "^19.1.0",
    "@angular/forms": "^19.1.0",
    "@angular/material": "^19.2.15",
    "@angular/platform-browser": "^19.1.0",
    "@angular/platform-browser-dynamic": "^19.1.0",
    "@angular/router": "^19.1.0",
    "@ngneat/transloco": "^6.0.4",
    "jwt-decode": "^4.0.0",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.15.0"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^19.2.11",
    "@angular/cli": "^19.1.6",
    "@angular/compiler-cli": "^19.1.0",
    "@types/jasmine": "~5.1.0",
    "@types/node": "^22.15.17",
    "jasmine-core": "~5.5.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "ng-packagr": "^19.2.0",
    "ts-node": "^10.9.2",
    "typescript": "~5.7.2"
  }
}
